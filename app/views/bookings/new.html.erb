<body class="ct-dark">
  <div class="dark">
    <%= render 'components/navbar' %>
  </div>

  <div class= "container h-100">
    <div class="d-flex align-items-center justify-content-center h-100">
      <div>
         <h2 class="mt-5 pt-5 mb-5 text-light"> <%= current_user.name %>, complete your booking</h2>
         <div class ='row'>
            <div class="col-6">
                <%= render 'components/listing-card', listing: @listing %>
            </div>
            <div class="col-6 text-light">
              <div class="">
