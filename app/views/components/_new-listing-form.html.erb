<%= simple_form_for listing do |f|%>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :production_year %>
  <%= f.input :price, label: 'Daily Price' %>
  <%= f.input :engine %>
  <%= f.input :horsepower %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, label: 'Images (Min. 3)' %>
  <%= f.button :submit, class:"btn btn-outline-light w-100 mt-3" %>
  <%= link_to "Cancel", listings_path, class:"btn btn-outline-light w-100 mt-3" %>
<% end %>
