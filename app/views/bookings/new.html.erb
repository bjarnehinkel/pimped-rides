                <%= f.input :days, collection: 1..30%>
                <% @booking.total_price = (10*@listing.price) %>
                <h4 id="total-price" class="mb-5"><strong>Total Price: â‚¬0</strong></h4>
                <br>
              </div>
                <div class="d-flex align-items-end">
                  <%= f.button :submit, 'BOOK!', class:"form-control btn btn-danger w-100 mt-5 rounded"%>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</body>








