<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <p class="Pimped-Rides">Pimped Rides</p>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      <% if user_signed_in? %>
        <li class="mr-2" style="font-size: 15px;"><%= current_user.email %></li>
      <% end %>
      <li class="nav-item dropdown">
        <i class="far fa-user avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to 'Profile' , user_path(current_user), class:"dropdown-item" %>
            <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class:"dropdown-item" %>
            <%= link_to 'Create Listing', new_listing_path, class:"dropdown-item" %>
          <% else %>
            <%= link_to 'Log In', new_user_session_path, class:"dropdown-item" %>
            <%= link_to 'Sign Up', new_user_registration_path, class:"dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
